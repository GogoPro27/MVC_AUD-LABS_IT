
@{
    ViewBag.Title = "IndexAjax";
}

<h2>Index Albums - Ajaz</h2>

<table class="table" id="albumsTable">
    <thead>
        <tr>
            <td>Name</td>
            <td>price</td>
            <td>Image</td>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#albumsTable").DataTable({
                ajax: {
                    url: "/api/Albums1",
                    dataSrc:""
                },
                columns: [
                    {
                        data: "Name",
                        render: function (settings, type, album) {
                            return "<a href='/Albums/Details/" + album.Id + "'>" + album.Name + "</a>";
                        }
                    },
                    {
                        data:"Price"
                    },
                    {
                        data: "AlbumArtUrl",
                        render: function (settings, type, album) {
                            return "<img src='" + album.AlbumArtUrl + "' style='max-width:100px'/>";
                        }
                    }
                ]
            });
        });
    </script>
    }
