@model IEnumerable<MVC_Vezbi_database.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="moviesTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DownloadUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DownloadUrl)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
                    <img src="@item.ImageUrl" style="max-width:100px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <button data-movie-id="@item.Id" class="btn-link js-delete">Delete</button> 
                    @*vazno*@
                </td>
            </tr>
        }
    </tbody>


</table>


@section Scripts{
    <script> //funkcija otkako kje zavrsi loadiranjeto na DOM
        $(document).ready(function () {
            var table = $("#moviesTable").DataTable();
            $("#moviesTable .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Do you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Movies/Delete/" + button.attr("data-movie-id"),
                            method: "GET",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function(err) {
                                console.log(err)
                            }
                            
                        })
                    } 
                })
            });
        });
    </script>
}