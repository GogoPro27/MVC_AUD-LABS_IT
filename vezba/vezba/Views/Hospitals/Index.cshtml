@model IEnumerable<vezba.Models.Hospital>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="hospitalsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img_Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Img_Url)*@
                    <img src="@item.Img_Url" style="max-width:140px" />
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        @Html.ActionLink("Add Doctor", "AddDoctor", new { id = item.Id })
                        <span> | </span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    @if (User.IsInRole("Admin"))
                    {
                        <span> | </span>
                        <button data-id="@item.Id" class="btn btn-link js-delete">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#hospitalsTable").DataTable();
            $("#hospitalsTable .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Do you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/HospitalsAPI/" + button.attr("data-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                });
            });
        });
    </script>
    }