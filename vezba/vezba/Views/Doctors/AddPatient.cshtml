@model vezba.Models.AddPatientToDoctorModel
@{
    ViewBag.Title = "AddPatient";
}

<h2>AddPatient</h2>

@using (Html.BeginForm("AddPatient"))
{
    <div>
        @Html.DropDownListFor(m => m.PatientId, new SelectList(Model.Patients, "Id", "Name"))
        @Html.HiddenFor(m => m.DoctorId)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

